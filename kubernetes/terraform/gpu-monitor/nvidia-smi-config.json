{
    "plugin": "custom",
    "pluginConfig": {
      "invoke_interval": "30s",
      "timeout": "5s",
      "max_output_length": 80,
      "concurrency": 3
    },
    "source": "custom-plugin-monitor",
    "metricsReporting": true,
    "conditions": [
      {
        "type": "GPUProblem",
        "reason": "GPUAvailable",
        "message": "GPU works fine"
      }
    ],
    "rules": [
      {
        "type": "permanent",
        "condition": "GPUProblem",
        "reason": "GPUUnavailable",
        "path": "/config/nvidia-smi.sh",
        "timeout": "3s"
      }
    ]
  }